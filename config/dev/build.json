{
  "link_configs": {
    "shell": [
      "mkdir ~/.config",
      "rm -rf ~/.config/nvim && ln -s ~/dev/config/nvim ~/.config/nvim",
      "rm -rf ~/.zshrc && ln -s ~/dev/config/zsh/.zshrc ~/.zshrc"
    ]
  },
  "install_editor_dependencies": {
    "packages": [
      "git",
      "nodejs",
      "nodejs-yarn",
      "neovim",
      "python3-neovim",
      "fzf",
      "ripgrep"
    ]
  },
  "setup_editor": {
    "depends_on": [
      "link_configs",
      "install_editor_dependencies"
    ],
    "shell": [
      "curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim",
      "nvim --headless +PlugInstall +qall"
    ]
  },
  "install_system_dependencies": {
    "depends_on": [
      "install_editor_dependencies"
    ],
    "packages": [
      "zsh",
      "hub",
      "golang", 
      "clang"
    ]
  },
  "install_oh_my_zsh": {
    "depends_on": [
      "link_configs",
      "install_system_dependencies"
    ],
    "shell": [
      "sh -c \"$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\" --unattended --skip-chsh --keep-zshrc"
    ]
  }
}
